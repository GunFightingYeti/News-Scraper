<div class="container">
    <div id="articleBackground">
        <button id="clear" class="btn btn-info">Clear All Articles</button>
        <ul>
        {{#each dbArticle}}
            <li class="article" >
            <h2>Title: {{this.title}}</h2>
            <p>Link: {{this.link}}</p>
            <img src={{this.image}}>
            <p>Description: {{this.excerpt}}</p>
            </li>
        {{/each}}
        </ul>
    </div>
